ALGORITHM algorithm_name
VAR
  p:CHAR
  nc:INTEGER:=0
  nv:INTEGER:=0
  nw:INTEGER:=0
  i:INTEGER:=0
BEGIN
    WHILE (p<>".") DO
        IF (p<>" ") THEN{
            nc ++;
        IF (p IN [a,e,i,o,u,y]) THEN{
            nv++;} 
            END_IF
        ELSE()
        nw ++;}
        END_IF
        i++;
    END_WHILE
   write (nc,nv,nw)
END